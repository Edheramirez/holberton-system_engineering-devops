#!/usr/bin/env bash
#Not found page 404

sudo apt-get update -y
sudo apt-get install nginx -y

echo "Holberton School" > ~/index.html
sudo cp ~/index.html /var/www/html/

REDI="\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com;\n\t}"
sudo sed -i "/server_name _;/ a\\$REDI" /etc/nginx/sites-available/default

ERROR="terror_page {\n\t\treturn 404 /404.html;\n\t}"
sudo sed -i "/redirect_me/ a\\$ERROR" /etc/nginx/sites-available/default

echo "Ceci n'est pas une page" > ~/404.html
sudo cp ~/404.html /var/www/html/

sudo service nginx restart
